{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "indentStyle": "space",
    "lineEnding": "lf",
    "ignore": [
      "**/.next",
      "**/.nuxt",
      "**/node_modules",
      "**/dist",
      "**/.svelte-kit",
      "**/.solid",
      "**/_nuxt",
      "**/__testfixtures__"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
